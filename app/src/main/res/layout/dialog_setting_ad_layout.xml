<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_greet"
        android:background="@color/colorWhiteBack"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="设置广告词"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/et_greet"
            android:hint="输入广告词"
            android:text=""
            android:maxLength="48"
            android:textSize="14sp"
            android:textColor="@color/colorRbNotSelected"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_weight="1"
            android:textColorHint="@color/colorCutOffLine2"
            android:padding="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/edittext_back_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:background="@color/colorCutOffLine2"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/colorWhiteBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:textColor="@color/colorRed"
            android:padding="12dp"
            android:gravity="center"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:background="@color/colorCutOffLine2"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_enter"
            android:text="确定"
            android:textColor="@color/app_color_blue"
            android:padding="12dp"
            android:clickable="true"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_loading"
            android:visibility="gone"
            android:src="@mipmap/loading"
            android:scaleType="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>