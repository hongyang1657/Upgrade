<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="31dp"
        android:src="@mipmap/icon_back_register" />

    <TextView
        android:id="@+id/tv_register_step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_back"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="32dp"
        android:text="注册2/3 "
        android:textColor="@color/color_FF111111"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tv_remind"
        android:layout_width="234dp"
        android:layout_height="20dp"
        android:layout_below="@id/tv_register_step1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textColor="#FF666666"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_register_number_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tv_remind"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="32dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/rl_count"
            android:background="@drawable/ayah_login_input_bg">

            <EditText
                android:inputType="number"
                android:id="@+id/check_code_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:layout_toLeftOf="@+id/phone_number_delete"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColor="@color/color_333333"
                android:textColorHint="#FF999999"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_count"
            android:layout_width="76dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ayah_login_input_bg">

            <TextView
                android:id="@+id/tv_count"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60s"
                android:textColor="#FF333333"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>

    <!--<TextView-->
        <!--android:id="@+id/check_code_wrong"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="18dp"-->
        <!--android:layout_below="@id/rl_register_number_input"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginLeft="44dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:text=""-->
        <!--android:textColor="@color/color_FFF34545"-->
        <!--android:textSize="12sp" />-->

    <Button
        android:id="@+id/btn_set_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/rl_register_number_input"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/btn_bg_normal"
        android:text="设置密码"
        android:textColor="@color/color_FFFFFFFF"
        android:textSize="14sp" />


</RelativeLayout>
