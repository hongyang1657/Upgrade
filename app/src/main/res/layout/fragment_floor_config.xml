<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qmuiteam.qmui.layout.QMUIButton
        android:id="@+id/bt_next"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/floor_button_shape_selected"
        android:text="下一步"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_width="150dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tv_line"
        android:layout_above="@id/bt_next"
        android:background="@color/colorCutOffLine2"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

    <TextView
        android:id="@+id/tv_title"
        android:text="按键梯控转换板插口楼层映射"
        android:layout_margin="14dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_line2"
        android:layout_below="@id/tv_title"
        android:background="@color/colorCutOffLine2"
        android:layout_width="match_parent"
        android:layout_height="2px"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_floor"
        android:layout_margin="10dp"
        android:layout_below="@id/tv_line2"
        android:layout_above="@id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_blank"
        android:visibility="invisible"
        android:layout_below="@id/tv_line2"
        android:layout_above="@id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>